{
  "name": "components-app-web",
  "version": "1.0.0",
  "main": "shared/index.jsx",
  "description": "Componentes reutilizables para React Native y Web",
  "private": true,
  "workspaces": [
    "shared",
    "web",
    "mobile"
  ],
  "scripts": {
    "web": "cd web && npm start",
    "build:web": "cd web && npm run build",
    "mobile": "cd mobile && npm start",
    "lint": "eslint \"shared/**/*.{js,jsx}\" \"web/src/**/*.{js,jsx}\"",
    "lint:fix": "eslint \"shared/**/*.{js,jsx}\" \"web/src/**/*.{js,jsx}\" --fix",
    "link:shared": "cd shared && npm link",
    "unlink:shared": "cd shared && npm unlink"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5"
  }
}
